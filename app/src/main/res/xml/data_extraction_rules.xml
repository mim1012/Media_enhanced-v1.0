<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="sensitive_prefs.xml" />
        <exclude domain="database" path="automation_logs.db" />
        <exclude domain="file" path="cache/" />
    </cloud-backup>
    <device-transfer>
        <!-- Include necessary data for device transfer -->
        <include domain="sharedpref" path="app_preferences.xml" />
        <include domain="database" path="app_database.db" />
    </device-transfer>
</data-extraction-rules>